<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - BookMyShow</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/BookMyShow.styles.css" asp-append-version="true" />
@*     <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">*@
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg bg-primary" data-bs-theme="dark">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">BookMyShow</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarColor01" aria-controls="navbarColor01" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarColor01">
                    <ul class="navbar-nav me-auto">
                        <li class="nav-item">
                            <a class="nav-link active" asp-area="" asp-controller="Home" asp-action="Index">
                                Home
                                <span class="visually-hidden">(current)</span>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="User" asp-controller="Home" asp-action="Privacy">Privacy</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="User" asp-controller="Booking" asp-action="Bookings">My Bookings</a>
                        </li>
                        @if(User.IsInRole("Admin"))
                        {
                            <li class="nav-item dropdown">
                                <div class="nav-link dropdown-toggle text-decoration-none navbar-collapse collapse d-sm-inline-flex justify-content-between" data-bs-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">Content Management</div>
                                <div class="dropdown-menu text-decoration-none">
                                    <a class="dropdown-item text-decoration-none" asp-area="Admin" asp-controller="Movie" asp-action="Index">Movie Management</a>
                                    <a class="dropdown-item text-decoration-none" asp-area="Admin" asp-controller="Theatre" asp-action="Index">Theatre Management</a>
                                    <a class="dropdown-item text-decoration-none" asp-area="Admin" asp-controller="Show" asp-action="Index">Show Management</a>
                                    <div class="dropdown-divider"></div>
                                </div>
                            </li>
                            <li class="nav-item dropdown">
                                <div class="nav-link dropdown-toggle text-decoration-none navbar-collapse collapse d-sm-inline-flex justify-content-between" data-bs-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">User Management</div>
                                <div class="dropdown-menu text-decoration-none">
                                    <a class="dropdown-item text-decoration-none" asp-area="Admin" asp-controller="User" asp-action="Index">User Management</a>
                                    <div class="dropdown-divider"></div>
                                </div>
                            </li>
                        }
                    </ul>
                    <partial name="_LoginPartial"/>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-6">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top border-1 fixed-bottom position-fixed footer text-muted form-control-color" style="background-color:#777777">
        <div class="container m-4">
            &copy; 2024 - BookMyShow - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @*<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>*@
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
