@model BookingCart
<div class="card border-dark mb-3 mt-3" style="max-width: 100rem;">
    <div class="card-header">
        <div class="my-3">
            <p>Booking Progress...</p>
        </div>
        <div class="progress my-2 mb-3">
            <div class="progress-bar" role="progressbar" style="width: 66%;" aria-valuenow="66" aria-valuemin="0" aria-valuemax="100"></div>
        </div>
    </div>
    <div class="card-body">
        <h4 class="card-title">Make payment</h4>
        <div class="card border-light mb-3" style="max-width: 100rem;">
            <a class="btn btn-primary" type="button" asp-action="BookTicket" asp-route-bookingCartId="@Model.BookingCartId">Pay now</a>
            </div>
        </div>
    </div>
</div>
