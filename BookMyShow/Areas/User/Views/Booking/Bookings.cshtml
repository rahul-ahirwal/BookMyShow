@model List<Booking>
</br>
<div id="myTabContent" class="tab-content mb-4">
    <h4>Your Bookings!</h4>
    <div class="tab-pane fade show active" id="home" role="tabpanel">
        <table class="table table-hover">
            <thead>
                <tr>
                    <th scope="col">Booking Id</th>
                    <th scope="col">Booking Time</th>
                    <th scope="col">Booking Price</th>
                    <th scope="col">Movie ID</th>
                    <th scope="col">Number Of Seats</th>
                    <th scope="col">Seat Numbers</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var booking in Model)
                {
                    <tr class="table-light">
                        <th scope="row">@booking.BookingId</th>
                        <th scope="row">@booking.BookingTime</th>
                        <th scope="row">@booking.TotalPrice</th>
                        <th scope="row">@booking.MovieId</th>
                        <th scope="row">@booking.NoOfSeats</th>
                        <th scope="row">@booking.SeatNumbers</th>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

