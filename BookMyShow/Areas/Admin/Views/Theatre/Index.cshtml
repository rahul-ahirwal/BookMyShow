@model IEnumerable<Theatre>
</br>
<div id="myTabContent" class="tab-content mb-4">
    <div class="float-end">
        <a type="button" asp-area="Admin" asp-controller="Theatre" asp-action="Create" class="btn btn-primary mx-4">Create new</a>
    </div>
    <div class="tab-pane fade show active" id="home" role="tabpanel">
        <table class="table table-hover">
            <thead>
                <tr>
                    <th scope="col">Theatre Name</th>
                    <th scope="col">City</th>
                    <th scope="col">State</th>
                    <th scope="col">Manage</th>
                </tr>
            </thead>
            <tbody>
                @foreach(var theatre in Model)
                {
                    <tr class="table-light">
                        <th scope="row">@theatre.Name</th>
                        <td>@theatre.City</td>
                        <td>@theatre.State</td>
                        <td>
                            <a type="button" asp-area="Admin" asp-controller="Theatre" asp-action="Details" asp-route-id="@theatre.Id" class="btn btn-success mx-4">View</a>
                            <a type="button" asp-area="Admin" asp-controller="Theatre" asp-action="Update" asp-route-id="@theatre.Id" class="btn btn-info mx-4">Edit</a>
                            <a type="button" asp-area="Admin" asp-controller="Theatre" asp-action="Delete" asp-route-id="@theatre.Id" class="btn btn-danger mx-4">Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

