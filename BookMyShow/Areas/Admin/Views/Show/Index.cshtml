@model IEnumerable<Show>
</br>
<div id="myTabContent" class="tab-content mb-4">
    <div class="float-end">
        <a type="button" asp-area="Admin" asp-controller="Show" asp-action="Create" class="btn btn-primary mx-4">Create new</a>
    </div>
    <div class="tab-pane fade show active" id="home" role="tabpanel">
        <table class="table table-hover">
            <thead>
                <tr>
                    <th scope="col">Movie Name</th>
                    <th scope="col">Theatre Name</th>
                    <th scope="col">Show Date</th>
                    <th scope="col">Show Time</th>
                    <th scope="col">Manage</th>
                </tr>
            </thead>
            <tbody>
                @foreach(var show in Model)
                {
                    <tr class="table-light">
                        <th scope="row">@show.Movie.Name</th>
                        <td>@show.Theatre.Name</td>
                        <td>@show.Date</td>
                        <td>@show.Time</td>
                        <td>
                            <a type="button" asp-area="Admin" asp-controller="Show" asp-action="Details" asp-route-id="@show.Id" class="btn btn-success mx-4">View</a>
                            <a type="button" asp-area="Admin" asp-controller="Show" asp-action="Update" asp-route-id="@show.Id" class="btn btn-info mx-4">Edit</a>
                            <a type="button" asp-area="Admin" asp-controller="Show" asp-action="Delete" asp-route-id="@show.Id" class="btn btn-danger mx-4">Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

